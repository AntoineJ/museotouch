    #     valign: 'middle'
    #     font_name: arial

    Label:
        id: labelReponse
        size_hint: (None, None)
        pos_hint: (None, None)
        color: 117/255.,113/255.,81/255.,1
        pos: 10, 55
        text: ''
        text_size: (210, None)
        size: (210, self.texture_size[1])
        font_size: 10
